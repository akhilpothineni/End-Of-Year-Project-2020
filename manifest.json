{
    "name": "End of Year Project",
    "version": "1.1",
    "description": "Extension",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Press"
    },
    "background":{
        "scripts": ["background.js"],
        "persistant": false
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "tabs" 
    ] 
}