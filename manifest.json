{
    "name": "EZ-Phrase",
    "version": "1.0.1",
    "description": "Pick phrases that you use most often and have them ready to be copied.",
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "EZ-Phrase",
        "default_icon": "mung-dab.png"
    },
    "permissions": [
        "clipboardWrite",
        "storage"
    ] 
}