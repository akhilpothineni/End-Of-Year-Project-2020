{
    "name": "EZ-Phrase",
    "version": "1.0",
    "description": "Pick phrases that you use most often and have them ready to be copied.",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "EZ-Phrase",
        "default_icon": "EzIcon.png"
    },
    "background":{
        "scripts": ["background.js"],
        "persistant": false
    },
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "tabs" 
    ] 
}